<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tabsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.emmbi.mobile.example.views.custom.CustomFontTextView
        android:id="@+id/tabsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:maxLines="1"
        android:textSize="14dp"
        android:minWidth="65dp"
        android:gravity="center_horizontal"
        android:textColor="@drawable/tab_text_selector"
        android:layout_centerInParent="true"
        custom:fontType="@string/bold_font"/>

    <com.emmbi.mobile.example.views.custom.CustomFontTextView
        android:id="@+id/notification_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="1"
        android:textSize="9dp"
        android:layout_marginLeft="3dp"
        android:gravity="center"
        android:layout_gravity="top"
        android:visibility="gone"
        android:textColor="@drawable/tab_text_selector"
        android:layout_above="@+id/tabsText"
        android:layout_toRightOf="@+id/tabsText"/>

    <!--<ImageView-->
        <!--android:layout_width="10dp"-->
        <!--android:layout_height="10dp"-->
        <!--android:layout_toRightOf="@id/tabsText"-->
        <!--android:src="@drawable/message_notification_bg"/>-->

</LinearLayout>
